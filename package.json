</head>
<body>
    <div id="root"></div>
    
    <script type="text/babel">
        const { useState, useEffect } = React;
        const { Briefcase, Users, TrendingUp, Bell, Upload, MapPin, DollarSign, Clock, CheckCircle, Filter, Target, Search } = lucide;

        const Icon = ({ icon: IconComponent, ...props }) => {
            const ref = React.useRef();
            React.useEffect(() => {
                if (ref.current) {
                    lucide.createElement(IconComponent).render(ref.current);
                }
            }, [IconComponent]);
            return <i ref={ref} {...props}></i>;
        };

        const SmartHirePortal = () => {
            const [activeTab, setActiveTab] = useState('jobs');
            const [searchQuery, setSearchQuery] = useState('');
            const [selectedJob, setSelectedJob] = useState(null);
            const [showNotifications, setShowNotifications] = useState(false);

            const stats = [
                { icon: 'Briefcase', label: 'Active Jobs', value: '10,234', color: 'blue' },
                { icon: 'Users', label: 'Candidates', value: '45,678', color: 'green' },
                { icon: 'TrendingUp', label: 'Match Rate', value: '85%', color: 'purple' },
                { icon: 'CheckCircle', label: 'Placements', value: '2,341', color: 'orange' }
            ];

            const jobs = [
                {
                    id: 1,
                    title: 'Senior Full Stack Engineer',
                    company: 'TechCorp Inc',
                    location: 'Bangalore, India',
                    salary: '₹50-70 LPA',
                    type: 'Full-time',
                    posted: '2 days ago',
                    matchScore: 92,
                    skills: ['React', 'Node.js', 'AWS', 'MongoDB', 'TypeScript'],
                    description: 'Leading tech company seeking experienced full stack engineer to build scalable cloud applications.'
                },
                {
                    id: 2,
                    title: 'ML Engineer',
                    company: 'AI Innovations',
                    location: 'Remote',
                    salary: '₹60-80 LPA',
                    type: 'Full-time',
                    posted: '1 day ago',
                    matchScore: 78,
                    skills: ['Python', 'TensorFlow', 'PyTorch', 'NLP', 'AWS'],
                    description: 'Build cutting-edge ML models for recommendation systems and natural language processing.'
                },
                {
                    id: 3,
                    title: 'DevOps Architect',
                    company: 'CloudScale Systems',
                    location: 'Hyderabad, India',
                    salary: '₹55-75 LPA',
                    type: 'Full-time',
                    posted: '3 days ago',
                    matchScore: 85,
                    skills: ['Kubernetes', 'Docker', 'AWS', 'CI/CD', 'Terraform'],
                    description: 'Design and implement scalable cloud infrastructure for high-traffic applications.'
